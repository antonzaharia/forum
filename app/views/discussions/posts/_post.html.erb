<%= turbo_frame_tag dom_id(post) do %>
  <div class="card my-4">
    <div class="card-body">
      <%= render partial: "discussions/posts/header", locals: { post: post } %>

      <%= post.body %>
    </div>
    <div class="card-footer d-flex">
      <%= link_to "Edit", edit_discussion_post_path(post.discussion, post), data: { turbo_frame: dom_id(post) }, class: "btn btn-link" %>
      <%= button_to "Delete", discussion_post_path(post.discussion, post), method: :delete, class: "btn btn-link" %>
    </div>
  </div>
<% end %>